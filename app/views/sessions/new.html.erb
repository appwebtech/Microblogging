<% provide(:title, 'Log in') %>
<h1>Log in</h1><br><hr>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: sessions_create_path) do |ukambani| %>

		<%= ukambani.label :email  %>
		<%= ukambani.text_field :email, class: 'form-control' %>

		<%= ukambani.label :password  %>
		<%= ukambani.password_field :password, class: 'form-control' %>

		<%= ukambani.label :remember_me, class: "checkbox inline" do %>
        <%= ukambani.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>


		<%= ukambani.submit "Log in", class: "btn btn-primary" %>

		<% end %>

		<p>New user? <%= link_to "Sign up now!", users_new_path %></p>
		
	</div>
</div>