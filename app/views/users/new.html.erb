<% provide(:title, 'Sign up') %>
<h1>Sign up</h1><br><hr>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |ukambani| %>


		<%= render 'shared/error_messages', object: ukambani.object %>



		<%= ukambani.label :name  %>
		<%= ukambani.text_field :name, class: 'form-control' %>

		<%= ukambani.label :email  %>
		<%= ukambani.text_field :email, class: 'form-control' %>

		<%= ukambani.label :password  %>
		<%= ukambani.password_field :password, class: 'form-control' %>

		<%= ukambani.label :password_confirmation  %>
		<%= ukambani.password_field :password_confirmation, class: 'form-control' %>

		<%= ukambani.submit "Create my Account", class: "btn btn-primary" %>

		<% end %>
		
	</div>
</div>
